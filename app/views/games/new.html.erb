<h1>New Game</h1>
<% @letters_array.each do |letter|  %>
<p class="letter-box"><%= letter  %></p>
<% end %>
<form action="score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word" placeholder="Your word">
  <%=  hidden_field_tag :letters, @letters_array %>
  <input type="submit">
</form>
